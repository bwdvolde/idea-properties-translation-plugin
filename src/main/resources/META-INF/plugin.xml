<idea-plugin>
    <id>com.github.bwdvolde.ideapropertiesutil</id>
    <name>idea-properties-util</name>
    <vendor>bwdvolde</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.properties</depends>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <className>com.github.bwdvolde.ideapropertiesutil.PropertyTranslationIntentAction</className>
        </intentionAction>
        <applicationService
                serviceInterface="com.github.bwdvolde.ideapropertiesutil.services.translation.TranslationService"
                serviceImplementation="com.github.bwdvolde.ideapropertiesutil.services.translation.impl.GoogleTranslationServiceImpl"
        />
    </extensions>
</idea-plugin>
